@using Edziennik.Data.Models
@model IEnumerable<Message>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Messages</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="CreateMessage" class="btn btn-primary">
                Send message
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                if (message.Opened)
                {
                    <tr>
                    <td width = "65%">
                        @message.Title
                    </td>
                    <td width = "25%">
                        @message.Author.FirstName @message.Author.SecondName
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Message" asp-route-id="@message.Id" class="btn btn-primary ">
                            Open
                        </a>
                    </td>
                    </tr>
                }
                else
                {
                    <tr>
                    <td width = "65%" class="fw-bold">
                        @message.Title
                    </td>
                    <td width = "25%">
                        @message.Author.FirstName @message.Author.SecondName
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Message" asp-route-id="@message.Id" class="btn btn-primary ">
                            Open
                        </a>
                    </td>
                </tr>
                }
                
            }
        </tbody>
    </table>
</div>